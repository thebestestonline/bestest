<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">What Are You Best At?</h1>
    <h4 class="text-center">Create A New Bestest Keyword Profile.</h4>
    <div class="well">
        <%= form_for @best, :url => {:action => "create"}, :html => { :multipart => true} do |f| %>
        
        <div class="form-group">
          <%= f.label :Keyword_Term, "Keyword Term" %>
          <%= f.text_field :term, class: 'form-control', placeholder: "The best..." %>
        </div>
        <div class="form-group">
          <%= f.label :Company_name , "Company Name" %>
          <%= f.text_field :company_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :avatar  %>
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :Web_Address , "Web Address" %>
          <%= f.text_field :web_address, class: 'form-control', :placeholder=>'https://www.example.com' %>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= f.label :Email %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="col-md-6">
              <%= f.label :Phone_number %>
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :Short_Description, "Short Description" %>
          <%= f.text_area :short_description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Long_Description, "Long Description" %>
          <%= f.text_area :long_description, class: 'form-control' %>
        </div>
        
        <div class="form-group text-right">
          <%= link_to "Cancel", user_bests_path(current_user.id), class: 'btn btn-default',
          data: {confirm: "Are you sure you want to cancel?"} %>
          <%= f.submit "Create Keyword Profile", class: 'btn btn-primary' %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>