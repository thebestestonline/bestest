<div class="container">
  
    <h2>My Keyword Profiles</h2>
    
      <div class="text-right input-group-lg">
        <%= form_tag user_bests_path(current_user.id), :method => 'get' do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :name => nil %>
          </p>
     
        
        
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" 
          data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort By <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="#">Rank</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Newest</a></li>
            <li><a href="#">Oldest</a></li>
            <li><a href="#">Views</a></li>
            <li><a href="#">Clicks</a></li>
          </ul>
        </div>
        
        <%= link_to "New Keyword Profile" ,new_user_best_path(user_id: current_user.id),
        :class =>"btn btn-primary" %>
      </div>
  
    <br>
    <ul class="list-unstyled">
      <% @bests.each do |best| %>
      <div class="well">
        <li><%= link_to best.term , user_best_path(current_user.id,best.id) %></li>
          <div class="text-right">
          <%= link_to "Edit" , edit_user_best_path(current_user.id,best.id),
          :class => "btn btn-success"  %>
          <%= link_to "Delete" , user_best_path(current_user.id,best.id), :method => :delete, 
          :class => "btn btn-default",data: {confirm: "Are you sure you want to delete this profile?"}  %><br>
          </div>
      </div>
      <%end%>
    </ul>
     <% end %>
    <br>
   
    </div>