<div class="container">
  
    <h2>My Keyword Profiles</h2>
      <div class="text-right">
        <%= link_to "New Keyword Profile" ,new_user_best_path(user_id: current_user.id),
        :class =>"btn btn-primary" %>
      </div>
  
    <br>
    <ul class="list-unstyled">
      <% @bests.each do |best| %>
      <div class="well">
        <li><%= link_to best.term , user_best_path(current_user.id,best.id) %></li>
          <div class="text-right">
          <%= link_to "Edit" , edit_user_best_path(current_user.id,best.id),
          :class => "btn btn-success"  %>
          <%= link_to "Delete" , user_best_path(current_user.id,best.id), :method => :delete, 
          :class => "btn btn-default",data: {confirm: "Are you sure you want to delete this profile?"}  %><br>
          </div>
      </div>
      <%end%>
    </ul>
   
    </div>