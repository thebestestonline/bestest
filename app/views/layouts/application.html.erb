<!DOCTYPE html>
<html>
  <head>
    <title>Bestest | The Best Search</title>
    <%= csrf_meta_tags %>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:200,400,700,800" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://js.stripe.com/v2/', type: 'text/javascript' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= tag :meta, :name => "stripe-key", :content => 'pk_test_Gkqb6PBizNFcHJcJXarjbz6t' %>
  </head>

  <body>
      <nav class="navbar navbar-default navbar-static-top" role="navigation">
        <div class='container'>
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            
            <%= link_to root_path, class: "navbar-brand" do %>
             Bestest
              <i class="fa fa-search-plus"></i>
            <% end %>
          </div>
          <div class="collapse navbar-collapse" id="main-nav-collapse">
            
              <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in? %>
                  <ul class="nav nav-pills">
                    <li class="dropdown dd-pad">
                      <a href="#" data-toggle="dropdown" class="dropdown-toggle dd-text">My Account <span class="caret"></span></a>
                      <ul class="dropdown-menu" id="menu1">
                        <% if current_user.profile %>
                          <li><%= link_to "My Profile", user_path(id: current_user.id) %></li>
                          <li><%= link_to "Edit Profile", edit_user_profile_path(user_id: current_user.id) %></li>
                          <li><%= link_to "My Bests", user_bests_path(current_user.id) %></li>

                        <% else %>
                          <li><%= link_to "Create Profile", new_user_profile_path(user_id: current_user.id) %></li>
                        <% end %>
                        <li class="divider"></li>
                        <li><%= link_to "Log Out",destroy_user_session_path, method: :delete%></li>
                      </ul>
                    </li>
                    </ul>
                      
                      
                  <% else %>
                    <li><%= link_to "Log In", new_user_session_path%></li>
                    <li><%= link_to "Sign Up", new_user_registration_path(plan: $basic_plan) %></li>
                  <% end %>
              </ul>
          </div><!-- /.navbar-collapse -->
        </div>
      </nav>
   

      <%= yield %>
 
   
   
  <nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <ul class="nav navbar-nav">
        <li><%= link_to "Get Listed", get_listed_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", new_contact_path %></li>
      </ul>
  
  </div>
</nav>  
    
      
  
    
  </body>
</html>
